{
	"coc.preferences.formatOnSaveFiletypesss": [
		"css",
		"Markdown",
		"html",
		"json",
		"javascript",
		"javascriptreact",
		"jsonc",
		"vim",
		"scss"
	],
	"java.enabled": false,
	"git.enableGutters": true,
	"git.addGBlameToVirtualText": true,
	"diagnostic-languageserver.filetypes": {
		"vim": "vint",
		"markdown": "write-good",
		"sh": "shellcheck",
		"php": "phpstan"
	},
	"diagnostic-languageserver.linters": {
		"vint": {
			"command": "vint",
			"debounce": 100,
			"args": ["--enable-neovim", "%filepath"],
			"offsetLine": 0,
			"offsetColumn": 0,
			"sourceName": "vint",
			"formatLines": 1,
			"formatPattern": [
				"[^:]+:(\\d+):(\\d+):\\s*(.*)(\\r|\\n)*$",
				{
					"line": 1,
					"column": 2,
					"message": 3
				}
			]
		}
	},

	"prettier.stylelintIntegration": false,
	"prettier.eslintIntegration": true,
	"suggest.noselect": false,
	"suggest.autoTrigger": "always",
	"suggest.timeout": 500,
	"suggest.acceptSuggestionOnCommitCharacter": true,
	"suggest.echodocSupport": true,
	"eslint.autoFixOnSave": false,
	"eslint.codeAction.showDocumentation": {
		"enable": true
	},
	"explorer.icon.enableNerdfont": true,
	"explorer.keyMappings": {
		"i": false,

		"k": "nodePrev",
		"j": "nodeNext",
		"gk": "expandablePrev",
		"gj": "expandableNext",

		"*": "toggleSelection",
		"<tab>": "actionMenu",

		"h": "collapse",
		"l": ["expandable?", "expand", "open"],
		"J": ["toggleSelection", "nodeNext"],
		"K": ["toggleSelection", "nodePrev"],
		"gl": "expandRecursive",
		"gh": "collapseRecursive",
		"<2-LeftMouse>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
		"o": ["expanded?", "collapse", "expand"],
		"<cr>": ["expandable?", "cd", "open"],
		"e": "open",
		"s": "open:split",
		"S": "open:split:plain",
		"E": "open:vsplit",
		"t": "open:tab",
		"<bs>": "gotoParent",
		"gp": "preview:labeling",

		"y": "copyFilepath",
		"Y": "copyFilename",
		"c": "copyFile",
		"x": "cutFile",
		"p": "pasteFile",
		"d": "delete",
		"D": "deleteForever",

		"a": "addFile",
		"A": "addDirectory",
		"r": "rename",

		".": "toggleHidden",
		"R": "refresh",

		"?": "help",
		"q": "quit",
		"<esc>": "esc",
		"X": "systemExecute",
		"gd": "listDrive",

		"f": "search",
		"F": "searchRecursive",

		"gf": "gotoSource:file",
		"gb": "gotoSource:buffer",

		"[[": "sourcePrev",
		"]]": "sourceNext",

		"[d": "diagnosticPrev",
		"]d": "diagnosticNext",

		"[c": "gitPrev",
		"]c": "gitNext",
		"<<": "gitStage",
		">>": "gitUnstage"
	},
	"cSpell.userWords": [
		"Chargebacks",
		"Unmount",
		"Untracked",
		"debounced",
		"dropzone",
		"ellipsize",
		"financials",
		"helpdesk",
		"reseted",
		"uploader"
	],
	"prettier.trailingComma": "none",
	"prettier.singleQuote": true,
	"prettier.printWidth": 100,
	"prettier.useTabs": true,
	"prettier.tabWidth": 2,
	"git.addedSign.hlGroup": "GitGutterAdd",
	"git.changedSign.hlGroup": "GitGutterChange",
	"git.removedSign.hlGroup": "GitGutterDelete",
	"git.topRemovedSign.hlGroup": "GitGutterDelete",
	"git.changeRemovedSign.hlGroup": "GitGutterChangeDelete"
}
